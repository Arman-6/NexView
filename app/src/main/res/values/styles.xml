<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarRoundedCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>
    <style name="MaterialCalendarViewStyle" parent="Theme.MaterialComponents.Light">
        <item name="mcv_selectionColor">#4CAF50</item> <!-- Green selection -->
        <item name="mcv_arrowColor">#FFFFFF</item> <!-- Orange arrows -->
        <item name="mcv_tileSize">50dp</item> <!-- Bigger tiles -->
    </style>
    <style name="CalendarDateStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18sp</item> <!-- Increase size -->
        <item name="android:textColor">#000000</item> <!-- Optional: Set color -->
    </style>

    <style name="CalendarWeekDayStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item> <!-- Weekday text size -->
        <item name="android:textColor">#757575</item>
    </style>



</resources>