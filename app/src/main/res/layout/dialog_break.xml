<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/appcolor"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".BreakDialogActivity"
    > <!-- Set background color here -->

    <ImageView
        android:layout_marginTop="200dp"
        android:id="@+id/icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/onlylogo" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:fontFamily="@font/aleo"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Time for a Break!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textColor="@android:color/white" /> <!-- Set text color for better visibility -->

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/aleo"
        android:text="You've been studying for 25 minutes. \n Take a 5-minute break. Else Continue."
        android:textAlignment="center"
        android:textSize="17sp"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/white" /> <!-- Set text color for better visibility -->

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/aleo"
        android:text="Continue"
        android:backgroundTint="@color/colorAccent"
        android:textColor="@android:color/white" /> <!-- Set button text color for better visibility -->
</LinearLayout>